{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="contenu-blanc">
    <h1>User index</h1>

    <div class="contenu">
        <table class="table table-striped table-advance">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Telephone</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.telephone }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-info btn-sm inline-button">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm inline-button">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('user_new') }}" class="btn btn-primary btn-sm">Create new</a>
</div>
{% endblock %}
