{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="contenu-blanc">
    <h1>User</h1>

    <div class="contenu">
        <table class="table table-striped table-advance">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ user.telephone }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <a href="{{ path('user_index') }}" class="btn btn-warning btn-sm">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success btn-sm">edit</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
